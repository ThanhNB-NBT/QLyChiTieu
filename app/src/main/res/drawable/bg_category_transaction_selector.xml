<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái được chọn -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#FFEA00" /> <!-- Màu nền vàng khi được chọn -->
            <stroke android:color="@color/colorPrimary" android:width="1dp" /> <!-- Viền -->
        </shape>
    </item>
    <!-- Trạng thái mặc định (không được chọn) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="@android:color/transparent" /> <!-- Màu nền trong suốt -->
            <stroke android:color="@android:color/transparent" android:width="1dp" /> <!-- Không có viền -->
        </shape>
    </item>
</selector>